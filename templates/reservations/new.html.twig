{# templates/reservations/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Réserver un billet - {{ event.title }}{% endblock %}

{% block body %}
    <h1>Réserver un billet pour "{{ event.title }}"</h1>

    <div class="reservation-form">
        {{ form_start(form) }}
            {{ form_row(form.fullName, {
                label: 'Nom complet',
                attr: { placeholder: 'Entrez votre nom complet' }
            }) }}
            {{ form_row(form.email, {
                label: 'Adresse email',
                attr: { placeholder: 'Entrez votre email' }
            }) }}
            {{ form_row(form.quantity, {
                label: 'Nombre de billets',
                attr: { min: 1, max: event.maxAttendees - event.reservations|length }
            }) }}

            <button type="submit" class="btn btn-primary">Confirmer la réservation</button>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-secondary">Retour aux détails</a>
{% endblock %}